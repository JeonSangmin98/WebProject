<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.mapper.CartMapper">

	<select id="getCart" resultType="com.project.domain.CartDTO">
		select * from tbl_cart
	</select>

	<select id="checkCart" resultType="com.project.domain.CartDTO">
		select * from tbl_cart
		where
		bno = #{bno}
	</select>

	<insert id="addCart">
		insert into tbl_cart(cartBno, bno, title, discount,
		category, image)
		values (seq_cart.nextval, #{bno}, #{title},
		#{discount}, #{category}, #{image})
	</insert>

	<delete id="deleteCart">
		delete from tbl_cart where cartBno = #{cartBno}
	</delete>

	<update id="modifyCount">
		update tbl_cart set count = #{count} where cartBno =
		#{cartBno}
	</update>
</mapper>