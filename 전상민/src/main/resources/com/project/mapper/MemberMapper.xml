<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.project.mapper.MemberMapper">
  		<!-- 회원가입 -->
  		<insert id="memberJoin">
  			insert into tbl_member
  			 values (#{memberId}, #{memberPw}, #{memberName}, #{memberMail}, #{memberAddr1}, #{memberAddr2}, #{memberAddr3}, sysdate)
  		</insert>
  		
  		<!-- 아이디 중복 검사 -->
  		<select id="idCheck" resultType="int">
  		 	select count(memberId) 
  		 	from tbl_member 
  		 	where memberId = #{memberId}
  		</select>
  		
  		<!-- 로그인 -->
  		<select id="memberLogin" resultType="com.project.domain.MemberDTO">
  			select memberId, memberPw, memberName 
  			from tbl_member 
  			where memberId = #{memberId}
  		</select>
  </mapper>